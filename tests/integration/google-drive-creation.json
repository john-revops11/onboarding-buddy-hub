
{
  "testCases": [
    {
      "name": "Successful Drive Creation",
      "input": {
        "userEmail": "test.user@example.com",
        "companyName": "Test Company Inc"
      },
      "expectedOutput": {
        "success": true,
        "driveId": "string", // A valid Google Drive ID
        "message": "Shared Drive created for Test Company Inc"
      },
      "assertions": [
        "response.success should be true",
        "response.driveId should not be empty",
        "response.message should contain company name"
      ]
    },
    {
      "name": "Missing User Email",
      "input": {
        "userEmail": "",
        "companyName": "Test Company Inc"
      },
      "expectedOutput": {
        "success": false,
        "error": "Missing userEmail or companyName"
      },
      "assertions": [
        "response.success should be false",
        "response.error should indicate missing parameters"
      ]
    },
    {
      "name": "Missing Company Name",
      "input": {
        "userEmail": "test.user@example.com",
        "companyName": ""
      },
      "expectedOutput": {
        "success": false,
        "error": "Missing userEmail or companyName"
      },
      "assertions": [
        "response.success should be false",
        "response.error should indicate missing parameters"
      ]
    }
  ]
}
